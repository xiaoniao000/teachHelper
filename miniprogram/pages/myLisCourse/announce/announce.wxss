/* pages/announce/announce.wxss */
.page{
  background-color: #F9F9F9;
  height: 100vh;
  position: relative;
}
.ann-box{
  position: relative;
  width: 238px;
  height: 390px;
  text-align: center;
  border-radius: 12px;
  box-shadow: 2px 2px 4px 0px rgba(170, 170, 170, 1);
  margin: 0 auto;
  background-color: #fff;
  top: 100px;
}
.ann-box-img{
  position: absolute;
  top: -22px;
  left: -22px;
  height: 58px;
  width: 58px;
}
.ann-time{
  font-size: 12px;
  color: #868585;
  position: relative;
  top: 52px;
}
.ann-content{
  font-size: 16px;
  color: #101010;
  position: relative;
  top: 82px;
  padding: 0 30px;
}
.finish{
  width: 50%;
  background-color: rgb(140, 174, 133);
  color: white;
  border-radius: 18px;
  height: 40px;
  font-size: 16px;
  position: relative;
  top: 250px;
}